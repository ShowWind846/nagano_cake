<main>
  <div class="sign-up-page">
<span>　新規会員登録　</span><BR><BR>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="container">
  <div class="row mb-2">
    <div class="col-3">
    <%= f.label :last_name, "名前" %><br />
    </div>
    <div class="col-1">(姓)</div>
    <div class="col-mg-4">
      <%= f.text_field :last_name, autofocus: true, size: "25" %>
    </div>
    <div class="col-1">(名)</div>
    <div class="col-mg-4">
      <%= f.text_field :first_name, autofocus: true, size: "25" %>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-3">
    <%= f.label :last_name_kana, "フリガナ" %><br />
    </div>
    <div class="col-1">(セイ)</div>
    <div class="col-mg-4">
    <%= f.text_field :last_name_kana, autofocus: true, size: "25" %>
    </div>
    <div class="col-1">(メイ)</div>
    <div class="col-mg-4">
    <%= f.text_field :first_name_kana, autofocus: true, size: "25" %>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-3">
    <%= f.label :email, "メールアドレス" %><br />
    </div>
    <div class="col-1"></div>
    <div class="col-mg-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "25" %>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-4">
    <%= f.label :postal_code, "郵便番号（ハイフンなし）" %><br />
    </div>
    <div class="col-mg-4">
    <%= f.text_field :postal_code, autofocus: true, size: "25" %>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-4">
    <%= f.label :address, "住所" %><br />
    </div>
    <div class="col-mg-4">
    <%= f.text_field :address, autofocus: true, size: "62" %>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-4">
    <%= f.label :telephone_number, "電話番号（ハイフンなし）" %><br />
    </div>
    <div class="col-mg-4">
    <%= f.text_field :telephone_number, autofocus: true, size: "25" %>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-4">
    <%= f.label :password, "パスワード（６文字以上）", size: "25" %>
    <% if @minimum_password_length %>
    <% end %><br />
    </div>
    <div class="col-mg-4">
    <%= f.password_field :password, autocomplete: "new-password", size: "25" %>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-4">
    <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
    </div>
    <div class="col-mg-4">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "25" %>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-4"></div>
    <div class="col-mg-4">
    <%= f.submit "　　新規登録　　", class: "btn btn-success" %><BR><BR>
    </div>
  </div>
  </div>
<% end %>

<span>　既に登録済みの方　</span><BR><BR>

<p><%= link_to "こちら", new_user_session_path %>　からログインしてください。</p>
</div>
</main>