<main>
<div class="login-page">
<span class="page-title">　管理者ログイン　</span><BR><BR>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
  <div class="row mb-3">
    <div class="col-3">
    <%= f.label :email,"メールアドレス" %><br />
    </div>
    <div class="col-8">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "60" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-3">
    <%= f.label :password,"パスワード" %><br />
    </div>
    <div class="col-8">
    <%= f.password_field :password, autocomplete: "current-password",size: "60" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-3"></div>
    <div class="col-8">
    <%= f.submit "　ログイン　",class: "btn btn-primary btn-sm" %>
    </div>
  </div>
<% end %>

</main>
</div>