<!--管理者側：商品詳細ページ-->
<main>
  <div class="index-page">
    <p><span class="page-title">商品詳細</span></p>
    <div class="post_image">
    <%= attachment_image_tag @item, :image, size: "200x150" %>
    </div>
    <div class="container index-menu" style="max-width: 600px">
      <div class="row mb-2">
        <div class="col-3"><p>商品名</p></div>
        <div class="col-9"><%= @item.name %></div>
      </div>
      <div class="row mb2">
        <div class="col-3"><p>商品説明</p></div>
        <div class="col-9"><%= @item.introduction %></div>
      </div>
      <div class="row mb-2">
        <div class="col-3"><p>ジャンル</p></div>
        <div class="col-9"><%= @genre.name %></div>
      </div>
      <div class="row mb-2">
        <div class="col-3"><p>税込価格<br>(税抜価格)</p></div>
        <div class="col-9"><%= @prices %> (<%= @item.price.to_s(:delimited) %>) 円</div>
      </div>
      <div class="row mb-4">
        <div class="col-3"><p>販売ステータス</p></div>
        <div class="col-9">
          <% if @item.is_active == true %>
          <font color="green" class="active-status">販売中</font>
          <% else %>
          <font color="red" class="active-status">販売停止中</font>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-7"><center><%= link_to "　編集する　", edit_admin_item_path(@item), class: "btn btn-success btn-lg" %></center></div>
      </div>
    </div>
  </div>
</main>