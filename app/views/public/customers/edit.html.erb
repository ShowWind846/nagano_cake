<!--ユーザー側：会員情報編集ページ-->
<main>
  <div class="user-edit-page">
    <span class="page-title">　会員情報編集　</span>
    <div class="contents">
      <%= form_with model: @customer, url: public_customer_path(current_user.id) do |f| %>
      <table class="user-edit-table">
        <tbody>
          <tr>
            <td width="200px">氏名</td>
            <td width="500px"><%= f.text_field :last_name %>　<%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td width="160px">住所</td>
            <td width="500px"><%= f.text_field :address, size: "60" %></td>
          </tr>
          <tr>
            <td width="160px">電話番号</td>
            <td width="500px"><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email %></td>
          </tr>
           <tr>
            <td></td>
            <td>
              <%= f.submit "　　編集内容を保存　　", class: "btn btn-success btn-sm save-btn" %>
              <%= link_to "　退会する　", public_withdrawl_path, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        </tbody>
      </table>
    <% end %>
    </div>
  </div>
</main>